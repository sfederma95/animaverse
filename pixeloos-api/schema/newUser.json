{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Schema for new users",
    "default": {},
    "required": [
        "username",
        "password",
        "email"
    ],
    "properties": {
        "username": {
            "$id": "#/properties/username",
            "type": "string",
            "title": "The username schema",
            "description": "An explanation about the purpose of this instance.",
            "minLength": 1,
            "maxLength": 30,
            "examples": [
                "username"
            ]
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "title": "The password schema",
            "description": "An explanation about the purpose of this instance.",
            "minLength": 5,
            "maxLength": 50,
            "examples": [
                "password"
            ]
        },
        "email": {
            "$id": "#/properties/email",
            "type": "string",
            "title": "The email schema",
            "description": "An explanation about the purpose of this instance.",
            "format":"email",
            "minLength":6,
            "examples": [
                "example@yahoo.com"
            ]
        },
        "avatar": {
            "$id": "#/properties/avatar",
            "type": "string",
            "title": "The avatar schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "https://cdn4.iconfinder.com/data/icons/user-interface-glyph-5/32/User-512.png"
            ]
        }
    },
    "additionalProperties": false
}