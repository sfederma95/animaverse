{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Schema for new pets",
    "default": {},
    "required": [
        "pet_name",
        "pet_img"
    ],
    "properties": {
        "pet_name": {
            "$id": "#/properties/pet_name",
            "type": "string",
            "title": "The pet_name schema",
            "minLength": 1,
            "maxLength": 20,
            "description": "An explanation about the purpose of this instance.",
            "examples": [
                "animal"
            ]
        },
        "pet_img": {
            "$id": "#/properties/pet_img",
            "type": "string",
            "title": "The pet_img schema",
            "minLength": 1,
            "description": "An explanation about the purpose of this instance.",
            "examples": [
                "animal.png"
            ]
        }
    },
    "additionalProperties": false
}